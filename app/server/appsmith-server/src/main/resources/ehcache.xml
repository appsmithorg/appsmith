<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.ehcache.org/v3"
        xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.0.xsd">

  <!-- Default cache settings -->
  <cache alias="default">
    <expiry>
      <ttl unit="seconds">3600</ttl> <!-- Time-to-live: 1 hour -->
    </expiry>
    <heap unit="entries">1000</heap> <!-- Maximum 1000 entries in memory -->
  </cache>

  <!-- Specific cache region for an entity -->
  <cache alias="com.appsmith.server.domains.Plugin">
    <expiry>
      <ttl unit="seconds">3600</ttl> <!-- Time-to-live: 10 minutes -->
    </expiry>
    <heap unit="entries">500</heap>
  </cache>

</config>
