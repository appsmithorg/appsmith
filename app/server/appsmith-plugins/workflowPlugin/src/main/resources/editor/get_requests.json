{
  "identifier": "GET_REQUESTS",
  "controlType": "SECTION",
  "conditionals": {
    "show": "{{!!actionConfiguration.formData.workflowId.data && !!actionConfiguration.formData.requestType.data && actionConfiguration.formData.requestType.data === 'GET_REQUESTS'}}"
  },
  "children": [
    {
      "label": "Request names",
      "tooltipText": "Search requests by name",
      "subtitle": "Filter for these request names",
      "propertyName": "request_name",
      "configProperty": "actionConfiguration.formData.requestNames.data",
      "controlType": "ARRAY_FIELD",
      "alternateViewTypes": ["json"],
      "addMoreButtonLabel": "Add request name",
      "schema": [{
          "label": "Request name",
          "key": "requestName",
          "controlType": "QUERY_DYNAMIC_INPUT_TEXT",
          "placeholderText": "requestName 1"
      }],
      "isRequired": false
    },
    {
      "label": "Request status",
      "tooltipText": "Filter by request status",
      "propertyName": "request_status",
      "configProperty": "actionConfiguration.formData.requestStatus.data",
      "controlType": "DROP_DOWN",
      "alternateViewTypes": ["json"],
      "initialValue": "PENDING",
      "isRequired": true,
      "options": [
        {
          "label": "Pending",
          "value": "PENDING"
        },
        {
          "label": "Resolved",
          "value": "RESOLVED"
        }
      ]
    },
    {
      "label": "Limit",
      "configProperty": "actionConfiguration.formData.limit.data",
      "controlType": "QUERY_DYNAMIC_INPUT_TEXT",
      "placeholderText": "10",
      "initialValue": ""
    },
    {
      "label": "Skip",
      "configProperty": "actionConfiguration.formData.skip.data",
      "controlType": "QUERY_DYNAMIC_INPUT_TEXT",
      "placeholderText": "0",
      "initialValue": ""
    }
  ]
}
