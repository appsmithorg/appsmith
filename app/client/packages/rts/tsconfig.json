{
  "compilerOptions": {
    "target": "es6",
    "resolveJsonModule": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "allowJs": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@constants/*": ["./src/constants/*"],
      "@services/*": ["./src/services/*"],
      "@middlewares/*": ["./src/middlewares/*"],
      "@controllers/*": ["./src/controllers/*"],
      "@rules/*": ["./src/middlewares/rules/*"],
      "@utils/*": ["./src/utils/*"],
      // EE ONLY ENTRIES START
      "@scim/*": ["./src/scim/*"],
      "@workflowProxy/*": ["./src/workflowProxy/*"]
      // EE ONLY ENTRIES END
    }
  },
  "include": ["src/**/*", "src/**/*.json"],
  "exclude": [
    "jest.config.js",
    "src/test",
    "index.js",
    "build.js",
    // EE ONLY ENTRIES START
    "workflows.js"
    // EE ONLY ENTRIES END
  ],
  "lib": ["es2015"]
}
